#Init

#Functions
def add(num1, num2):
    result = num1+num2
    print(result)
def subtract(num1, num2):
    result = num1 - num2
    print(result)
def multiply(num1, num2):
    result = num1 * num2
    print(result)
def divide(num1, num2):
    result = num1 / num2
    print(result)
def simpleCalculator():
    print("Welcome to simple calculator")
    while True:
        print("please choose an operation")
        print("""1. Add
2. subtract
3. Multiply
4. divide
5. quit""")
        option = int(input("1-5: "))
        if option == 1:
            num1 = int(input("please enter the first number: "))
            num2 = int(input("Please enter the second number: "))
            add(num1, num2)
        if option == 2:
            num1 = int(input("please enter the first number: "))
            num2 = int(input("Please enter the second number: "))
            subtract(num1, num2)
        if option == 3:
            num1 = int(input("please enter the first number: "))
            num2 = int(input("Please enter the second number: "))
            multiply(num1, num2)
        if option == 4:
            num1 = int(input("please enter the first number: "))
            num2 = int(input("Please enter the second number: "))
            divide(num1, num2)
        if option == 5:
            print("Thanks for using the calculator")
            break
#Main
simpleCalculator()
